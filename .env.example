# Database Configuration
# Copy this file to .env and fill in your actual credentials

# AI Provider Selection (gemini or openai)
AI_PROVIDER=gemini

# Gemini API Key (required if AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (required if AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# PostgreSQL Database Configuration (Read-Only User for Schema Extraction)
DB_HOST=localhost
DB_NAME=test
DB_USER=test
DB_PASSWORD=test    
DB_PORT=5432

# Schema Cache Settings
SCHEMA_CACHE_DURATION_MINUTES=60

# Application Settings
APP_TITLE=AI Database Manager
MAX_MEMORY_ROUNDS=5

# Query Settings
MAX_RESULT_ROWS=1000
QUERY_TIMEOUT_SECONDS=30
